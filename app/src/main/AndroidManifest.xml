<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="net.feheren_fekete.applist">

    <application
        android:name="net.feheren_fekete.applist.ApplistApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/MyThemeBrown">
        <activity
            android:name="net.feheren_fekete.applist.ApplistActivity"
            android:excludeFromRecents="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="net.feheren_fekete.applist.SettingsActivity">
        </activity>
    </application>

</manifest>
