<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    android:id="@+id/applist_page_fragment_rootlayout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <FrameLayout
        android:id="@+id/applist_page_fragment_page_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />

    <!--
     We add a top padding to the toolbar to "push it down" below the status bar.
     REF: 2017_06_22_12_00_transparent_status_bar_top_padding
     -->
    <!--
     We create the toolbar background programmatically.
     REF: 2017_06_30_toolbar_gradient
    -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            >
        </androidx.appcompat.widget.Toolbar>
    </FrameLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
