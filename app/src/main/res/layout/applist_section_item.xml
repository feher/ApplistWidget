<?xml version="1.0" encoding="utf-8"?>
<!--
 This FrameLayout is here to apply the background color on it.
 We cannot put it on the LinearLayout because it already has the
 selectableItemBackground.
 Yes, we could create a custom ripple background with proper colors
 and apply that to the LinearLayout but that's much more work.
 -->
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/sectionBackgroundColor">

    <RelativeLayout
        android:id="@+id/applist_section_item_layout"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?selectableItemBackground">

        <TextView
            android:id="@+id/applist_section_item_section_name"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:gravity="center_vertical"
            android:layout_gravity="center_vertical"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textColor="?attr/sectionTextColor"
            />

    </RelativeLayout>
</FrameLayout>
