<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout"
    android:layout_width="96dp"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:focusable="true"
    android:background="?attr/primaryLightColor"
    >

    <TextView
        android:id="@+id/dragged_sectionitem_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:ellipsize="end"
        android:maxLines="2"
        android:fontFamily="sans-serif-condensed"
        android:textStyle="normal"
        android:textSize="12sp"
        android:textColor="?attr/primaryTextColor"
        tools:text="Section name"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginBottom="10dp"
        android:paddingRight="5dp"
        android:paddingLeft="5dp"
        />

    <ImageView
        android:id="@+id/dragged_sectionitem_icon"
        android:layout_width="@dimen/appitem_icon_size"
        android:layout_height="@dimen/appitem_icon_size"
        android:src="@drawable/badge"
        app:layout_constraintTop_toBottomOf="@id/dragged_sectionitem_name"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        />

</android.support.constraint.ConstraintLayout>
