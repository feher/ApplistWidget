<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/launcher_page_editor_fragment_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black"
    >

    <Button
        android:id="@+id/launcher_page_editor_add_page"
        android:layout_margin="12dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableTop="@drawable/ic_add"
        android:background="@android:color/transparent"
        android:textColor="@android:color/darker_gray"
        android:text="@string/launcher_page_editor_new_page"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/launcher_page_editor_done"
        tools:text="New Page"
        />

    <Button
        android:id="@+id/launcher_page_editor_done"
        android:layout_margin="12dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableTop="@drawable/ic_done"
        android:background="@android:color/transparent"
        android:textColor="?attr/colorAccent"
        android:text="@string/launcher_page_editor_done"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/launcher_page_editor_add_page"
        tools:text="Done"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/launcher_page_editor_page_list"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="15dp"
        android:clipToPadding="false"
        android:clipChildren="false"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/launcher_page_editor_add_page"
        />

</androidx.constraintlayout.widget.ConstraintLayout>
