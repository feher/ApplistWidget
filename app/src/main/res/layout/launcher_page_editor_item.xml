<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/launcher_page_editor_item_layout"
    android:layout_centerInParent="true"
    android:layout_width="300dp"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    >

    <ImageView
        android:id="@+id/launcher_page_editor_item_wallpaper"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:layout_centerInParent="true"
        />

    <ImageView
        android:id="@+id/launcher_page_editor_item_screenshot"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:layout_centerInParent="true"
        />

    <ImageView
        android:id="@+id/launcher_page_editor_item_remove_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:tint="@android:color/white"
        android:background="@drawable/page_editor_button_right_corner"
        app:srcCompat="@drawable/ic_delete"
        android:layout_alignBottom="@id/launcher_page_editor_item_screenshot"
        android:layout_alignRight="@id/launcher_page_editor_item_screenshot"
        />

    <ImageView
        android:id="@+id/launcher_page_editor_item_home_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:background="@drawable/page_editor_button_left_corner"
        app:srcCompat="@drawable/ic_home_filled"
        android:layout_alignBottom="@id/launcher_page_editor_item_screenshot"
        android:layout_alignLeft="@id/launcher_page_editor_item_screenshot"
        />

    <!--
    We also change/set the drawableRight from code.
    REF: 2017_07_06_set_pagenumber_drawable
    -->
    <TextView
        android:id="@+id/launcher_page_editor_item_page_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:background="@drawable/page_editor_button_top"
        android:gravity="center"
        android:drawableRight="@drawable/ic_move"
        android:drawablePadding="12dp"
        android:textAppearance="@android:style/TextAppearance.Medium"
        android:textColor="@android:color/white"
        android:shadowDx="5"
        android:shadowDy="5"
        android:shadowRadius="5"
        android:shadowColor="@android:color/black"
        android:layout_centerHorizontal="true"
        android:layout_alignTop="@id/launcher_page_editor_item_screenshot"
        tools:text="1"
        tools:textColor="@android:color/black"
        />

</RelativeLayout>
