    <style name="MyThemeBase" parent="Theme.AppCompat.Light.DarkActionBar">
        <!--
        REF: 2017_06_23_22_41_dont_show_wallpaper_in_settings_screen.
        -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowShowWallpaper">true</item>

        <!--
        We make the status bar and the navigation bar translucent.
        But this makes the window content to go below them. For this reason we apply
        paddings for the relevant views.
        REF: 2017_06_22_12_00_transparent_status_bar_top_padding
        REF: 2017_06_22_12_00_transparent_navigation_bar_bottom_padding
        -->
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>

        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowAllowEnterTransitionOverlap">true</item>
        <item name="android:windowAllowReturnTransitionOverlap">true</item>
        <item name="android:windowSharedElementEnterTransition">@android:transition/move</item>
        <item name="android:windowSharedElementExitTransition">@android:transition/move</item>

        <item name="android:windowActivityTransitions">true</item>
    </style>

